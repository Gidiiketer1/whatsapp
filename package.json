{
  "name": "whatsapp-clone",
  "version": "1.0.0",
  "description": "Full-stack WhatsApp-like messaging application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "app": "node start-app.js",
    "app:server": "cd server && NODE_ENV=production node index.js",
    "app:client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "start": "npm run app"
  },
  "keywords": [
    "whatsapp",
    "messaging",
    "react",
    "nodejs",
    "socket.io"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "express": "^5.1.0",
    "mongoose": "^8.19.1"
  }
}
